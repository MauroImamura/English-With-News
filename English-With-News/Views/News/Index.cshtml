@model NewsList

<h1 style="text-align:center">NEW LIST</h1>
<br/>
<p id="meaningConsult" data-id="hello">Hello</p>
<br/>
<ul>
    @foreach(News news in Model.currentNews)
    {
        <li>
            <h2 style="font-size:15px;font-weight:500">@news.headline</h2>
            <p style="font-size:12px;font-weight:200">@news.summmary</p>
        </li>
    }
</ul>

<!-- Sweet Alert-->
<link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
<script src="~/lib/sweetalert2/sweetalert2.min.js"></script>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">

    $('#meaningConsult').click(function () {
        var word = $(this).attr("data-id");
        var url = "/news/Meaning";

        $.post(url, { word: word }, function(data) {
            var information = $.parseJSON(data);
            var title = information.word.toUpperCase();
            var meanings = information.meanings;
            var arr = [];
            meanings.forEach(meanList);

            Swal.fire(
                {
                    title: title,
                    text: meanings,
                    //icon: "success",
                    showCancelButton: 0,
                    confirmButtonColor: "#6D3227",
                    confirmButtonText: "Close"
                }
            );
        });
    });

    function meanList(mean){
        var x = mean.definitions;
        x.forEach(func)
        function func(item)
        {
            console.log(item.definition);
        };
    };

</script>